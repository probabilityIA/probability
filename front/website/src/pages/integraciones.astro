---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<style>
	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.05);
		}
	}

	.blob {
		position: absolute;
		border-radius: 50%;
		filter: blur(60px);
		opacity: 0.1;
		animation: float 6s ease-in-out infinite;
	}

	.whatsapp-float {
		position: fixed;
		bottom: 2rem;
		right: 2rem;
		z-index: 50;
	}

	.whatsapp-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 80px;
		height: 80px;
		background: transparent;
		border-radius: 50%;
		color: white;
		text-decoration: none;
		transition: all 0.3s ease;
		animation: pulse 3s ease-in-out infinite;
	}

	.whatsapp-btn:hover {
		transform: scale(1.2);
		filter: drop-shadow(0 0 20px rgba(34, 197, 94, 0.6));
	}

	.gradient-text {
		background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.integration-card {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0.3) 100%);
		border: 1px solid #E9D5FF;
		backdrop-filter: blur(10px);
	}

	.integration-card:hover {
		background: linear-gradient(135deg, rgba(255, 255, 255, 0.7) 0%, rgba(255, 255, 255, 0.5) 100%);
		border-color: #D8B4FE;
		transform: translateY(-4px);
		box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.1);
	}

	.logo-container {
		background: white;
		padding: 12px;
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 80px;
	}
</style>

<Layout title="Integraciones - probabilityIA">
	<Header />
	<main>
		<!-- WhatsApp Float Button -->
		<div class="whatsapp-float">
			<a href="https://wa.me/573138241302?text=Hola%20ProbabilityIA%2C%20tengo%20una%20consulta%20sobre%20integraciones" class="whatsapp-btn" title="Contactanos por WhatsApp">
				<img src="https://static.vecteezy.com/system/resources/previews/021/495/946/non_2x/whatsapp-logo-icon-free-png.png" alt="WhatsApp" class="w-12 h-12"/>
			</a>
		</div>

		<!-- Hero Section -->
		<section class="relative bg-gradient-to-br from-white via-purple-50 to-white py-20 px-6 sm:px-20 overflow-hidden">
			<div class="blob" style="width: 400px; height: 400px; background: #8B5CF6; top: -100px; right: -100px;"></div>
			<div class="blob" style="width: 300px; height: 300px; background: #A855F7; bottom: -50px; left: -50px; animation-delay: 2s;"></div>

			<div class="max-w-6xl mx-auto text-center relative z-10">
				<div class="inline-flex items-center gap-2 bg-purple-100 border border-purple-300 rounded-full px-4 py-2 mb-6 hover:bg-purple-200 transition-colors">
					<span class="text-[#8B5CF6] font-medium text-sm">INTEGRACIONES</span>
				</div>
				<h1 class="text-5xl sm:text-6xl lg:text-7xl font-extrabold text-gray-900 mb-6 leading-tight">
					Conecta con tus herramientas <span class="gradient-text">favoritas</span>
				</h1>
				<p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto">
					Integramos con las plataformas de eCommerce más populares del mundo
				</p>
			</div>
		</section>

		<!-- Integrations Grid -->
		<section class="bg-white py-20 px-6 sm:px-20">
			<div class="max-w-6xl mx-auto">
				<div class="text-center mb-16">
					<h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">Plataformas Soportadas</h2>
					<p class="text-gray-600 text-lg">Encuentra tu plataforma y comienza a integrar hoy</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					<!-- Shopify -->
					<div class="integration-card rounded-2xl p-8 transition-all duration-300 cursor-pointer">
						<div class="logo-container mb-6">
							<img src="https://cdn.shopify.com/shopify-marketing_assets/static/shopify-favicon.png" alt="Shopify" class="h-12 object-contain"/>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-2">Shopify</h3>
						<p class="text-gray-600 mb-6">La plataforma de eCommerce más popular del mundo</p>
						<button class="text-[#8B5CF6] hover:text-[#7C3AED] font-semibold flex items-center gap-2">
							Integrar
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
						</button>
					</div>

					<!-- Mercado Libre -->
					<div class="integration-card rounded-2xl p-8 transition-all duration-300 cursor-pointer">
						<div class="logo-container mb-6">
							<img src="https://probability-media-assets.s3.us-east-1.amazonaws.com/integration-types/1765744961_mercado-libre-logo.png" alt="Mercado Libre" class="h-16 object-contain"/>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-2">Mercado Libre</h3>
						<p class="text-gray-600 mb-6">El marketplace líder en América Latina</p>
						<button class="text-[#8B5CF6] hover:text-[#7C3AED] font-semibold flex items-center gap-2">
							Integrar
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
						</button>
					</div>

					<!-- WooCommerce -->
					<div class="integration-card rounded-2xl p-8 transition-all duration-300 cursor-pointer">
						<div class="logo-container mb-6">
							<img src="https://probability-media-assets.s3.us-east-1.amazonaws.com/integration-types/1765745053_woocomerce.webp" alt="WooCommerce" class="h-12 object-contain"/>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-2">WooCommerce</h3>
						<p class="text-gray-600 mb-6">La plataforma de WordPress para eCommerce</p>
						<button class="text-[#8B5CF6] hover:text-[#7C3AED] font-semibold flex items-center gap-2">
							Integrar
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
						</button>
					</div>

					<!-- API Custom -->
					<div class="integration-card rounded-2xl p-8 transition-all duration-300 cursor-pointer">
						<div class="logo-container mb-6 bg-gradient-to-br from-[#8B5CF6] to-[#A855F7]">
							<svg class="w-8 h-8 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<polyline points="12 3 20 7.5 20 16.5 12 21 4 16.5 4 7.5 12 3"></polyline>
								<line x1="12" y1="12" x2="20" y2="7.5"></line>
								<line x1="12" y1="12" x2="12" y2="21"></line>
								<line x1="12" y1="12" x2="4" y2="7.5"></line>
							</svg>
						</div>
						<h3 class="text-xl font-bold text-gray-900 mb-2">API Personalizada</h3>
						<p class="text-gray-600 mb-6">Integración mediante API REST para cualquier plataforma</p>
						<button class="text-[#8B5CF6] hover:text-[#7C3AED] font-semibold flex items-center gap-2">
							Documentación
							<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
						</button>
					</div>
				</div>
			</div>
		</section>

		<!-- Integration Features -->
		<section class="bg-gradient-to-br from-purple-50 via-white to-purple-50 py-20 px-6 sm:px-20">
			<div class="max-w-6xl mx-auto">
				<h2 class="text-4xl font-bold text-gray-900 text-center mb-16">¿Qué obtiene con cada integración?</h2>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<div class="bg-white border border-purple-200 rounded-2xl p-8 hover:shadow-lg hover:border-purple-300 transition-all">
						<div class="flex items-center gap-4 mb-6">
							<div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center">
								<svg class="w-6 h-6 text-[#8B5CF6]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900">Sincronización Automática</h3>
						</div>
						<p class="text-gray-600">
							Los datos de tus pedidos se sincronizan automáticamente en tiempo real sin intervención manual
						</p>
					</div>

					<div class="bg-white border border-purple-200 rounded-2xl p-8 hover:shadow-lg hover:border-purple-300 transition-all">
						<div class="flex items-center gap-4 mb-6">
							<div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center">
								<svg class="w-6 h-6 text-[#8B5CF6]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900">Predicciones en Tiempo Real</h3>
						</div>
						<p class="text-gray-600">
							Recibe análisis predictivos instantáneos para cada nuevo pedido en tu plataforma
						</p>
					</div>

					<div class="bg-white border border-purple-200 rounded-2xl p-8 hover:shadow-lg hover:border-purple-300 transition-all">
						<div class="flex items-center gap-4 mb-6">
							<div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center">
								<svg class="w-6 h-6 text-[#8B5CF6]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path></svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900">Alertas Inteligentes</h3>
						</div>
						<p class="text-gray-600">
							Recibe notificaciones cuando se detecten riesgos altos de devolución en tus pedidos
						</p>
					</div>

					<div class="bg-white border border-purple-200 rounded-2xl p-8 hover:shadow-lg hover:border-purple-300 transition-all">
						<div class="flex items-center gap-4 mb-6">
							<div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center">
								<svg class="w-6 h-6 text-[#8B5CF6]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
							</div>
							<h3 class="text-xl font-bold text-gray-900">Webhooks Personalizados</h3>
						</div>
						<p class="text-gray-600">
							Integra nuestros datos con tus workflows automáticos mediante webhooks
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="bg-gradient-to-br from-purple-50 via-white to-purple-50 py-20 px-6 sm:px-20">
			<div class="max-w-4xl mx-auto bg-gradient-to-br from-[#8B5CF6] via-[#A855F7] to-[#7C3AED] rounded-2xl p-12 sm:p-20 text-center border border-purple-300">
				<h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
					¿Tu plataforma no está en la lista?
				</h2>
				<p class="text-white text-opacity-90 mb-10 text-lg">
					Contáctanos para una integración personalizada
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
					<a href="https://meet.brevo.com/probability-ia/reunion-de-30-minutos" class="flex justify-center items-center bg-white text-[#8B5CF6] hover:bg-gray-100 px-8 sm:px-10 py-4 rounded-full font-bold text-lg transition-all hover:shadow-lg w-full sm:w-auto">
						Solicitar Integración
					</a>
					<a href="https://wa.me/573138241302?text=Hola%20ProbabilityIA%2C%20necesito%20una%20integración%20personalizada" class="flex justify-center items-center border-2 border-white text-white hover:bg-white hover:text-[#8B5CF6] px-8 sm:px-10 py-4 rounded-full font-bold text-lg transition-all w-full sm:w-auto">
						Contáctanos por WhatsApp
					</a>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>
