---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import BannerPromo from '../components/BannerPromo.astro';
import IntegrationsSection from '../components/IntegrationsSection.astro';
import HowItWorks from '../components/HowItWorks.astro';
import AdvantagesSection from '../components/AdvantagesSection.astro';
import FeaturesSection from '../components/FeaturesSection.astro';
import Footer from '../components/Footer.astro';
---

<style>
	.whatsapp-float {
		position: fixed;
		bottom: 1rem;
		right: 1rem;
		z-index: 50;
	}

	.whatsapp-btn {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 60px;
		height: 60px;
		background: transparent;
		border-radius: 50%;
		color: white;
		text-decoration: none;
		transition: all 0.3s ease;
		animation: pulse 3s ease-in-out infinite;
	}

	.whatsapp-btn:hover {
		transform: scale(1.2);
		filter: drop-shadow(0 0 20px rgba(34, 197, 94, 0.6));
	}

	@media (min-width: 640px) {
		.whatsapp-float {
			bottom: 2rem;
			right: 2rem;
		}

		.whatsapp-btn {
			width: 80px;
			height: 80px;
		}
	}

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
		}
		50% {
			transform: scale(1.1);
		}
	}
</style>

<Layout>
	<Header />
	<!-- WhatsApp Float Button -->
	<div class="whatsapp-float">
		<a href="https://wa.me/573138241302?text=Hola%20ProbabilityIA%2C%20me%20interesa%20conocer%20mÃ¡s%20sobre%20tu%20plataforma" class="whatsapp-btn" title="Contactanos por WhatsApp">
			<img src="https://static.vecteezy.com/system/resources/previews/021/495/946/non_2x/whatsapp-logo-icon-free-png.png" alt="WhatsApp" class="w-9 sm:w-12 h-9 sm:h-12"/>
		</a>
	</div>
	<main>
		<HeroSection />
		<BannerPromo />
		<IntegrationsSection />
		<HowItWorks />
		<AdvantagesSection />
		<FeaturesSection />
	</main>
	<Footer />
</Layout>
