---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = 'probabilityIA - Predice y Reduce Devoluciones en Tiempo Real', description = 'Reduce devoluciones, aumenta ganancias. Crece con inteligencia artificial.' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[#0A0A0F] text-white antialiased">
		<slot />
	</body>
</html>
