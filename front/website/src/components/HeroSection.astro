<style>
	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	.blob {
		position: absolute;
		border-radius: 50%;
		filter: blur(60px);
		opacity: 0.12;
		animation: float 6s ease-in-out infinite;
	}

	.blob-1 {
		width: 400px;
		height: 400px;
		background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
		top: -100px;
		right: -100px;
		animation-delay: 0s;
	}

	.blob-2 {
		width: 350px;
		height: 350px;
		background: linear-gradient(135deg, #EC4899 0%, #F43F5E 100%);
		bottom: -50px;
		left: -50px;
		animation-delay: 2s;
	}

	.blob-3 {
		width: 300px;
		height: 300px;
		background: #8B5CF6;
		top: 50%;
		left: -150px;
		animation-delay: 4s;
	}

	.gradient-text {
		background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.particle {
		position: absolute;
		width: 2px;
		height: 2px;
		background: #8B5CF6;
		border-radius: 50%;
		opacity: 0.3;
	}
</style>

<section class="relative bg-white py-12 sm:py-16 md:py-20 lg:py-20 px-4 sm:px-6 md:px-20 overflow-hidden">
