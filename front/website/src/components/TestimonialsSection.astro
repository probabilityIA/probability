			<h2 class="text-5xl font-bold text-white mb-4">
				Lo que dicen nuestros clientes
			</h2>
		</div>

		<!-- Testimonials Grid -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<!-- Testimonial 1 -->
			<div class="bg-[#18181B] border border-[#27272A] rounded-xl p-8">
