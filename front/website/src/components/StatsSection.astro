---

<section class="relative bg-gradient-to-r from-[#8B5CF6] via-[#6D28D9] to-[#4C1D95] py-25 px-20 overflow-hidden">
	<!-- Background overlay for gradient depth -->
	<div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 20% 50%, rgba(139, 92, 246, 0.5), transparent 50%), radial-gradient(circle at 80% 80%, rgba(77, 29, 149, 0.5), transparent 50%)"></div>

	<div class="max-w-6xl mx-auto relative z-10">
		<!-- Header -->
		<div class="text-center mb-12">
			<h2 class="text-4xl font-bold text-white mb-3">
				Resultados que hablan por sí solos
			</h2>
			<p class="text-white text-opacity-90 text-lg">
				Nuestros clientes ven mejoras significativas en los primeros meses
			</p>
		</div>

		<!-- Stats Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			<!-- Stat 1 -->
			<div class="text-center">
				<div class="text-7xl font-extrabold text-white mb-2">50K+</div>
				<div class="text-white text-opacity-90">Guías generadas mensualmente</div>
			</div>

			<!-- Stat 2 -->
			<div class="text-center">
				<div class="text-7xl font-extrabold text-white mb-2">15+</div>
				<div class="text-white text-opacity-90">Paqueterías integradas</div>
			</div>

			<!-- Stat 3 -->
			<div class="text-center">
				<div class="text-7xl font-extrabold text-white mb-2">99.8%</div>
				<div class="text-white text-opacity-90">Entregas exitosas rastreadas</div>
			</div>

			<!-- Stat 4 -->
			<div class="text-center">
				<div class="text-7xl font-extrabold text-white mb-2">24hrs</div>
				<div class="text-white text-opacity-90">Tiempo promedio de entrega</div>
			</div>
		</div>
	</div>
</section>
