						<circle cx="8" cy="8" r="3" fill="#000000"/>
						<!-- Purple Diagonal Line -->
						<line x1="12" y1="12" x2="32" y2="32" stroke="#8B5CF6" stroke-width="4" stroke-linecap="round"/>
					</svg>
					<span class="font-bold text-lg group-hover:text-[#8B5CF6] transition-colors duration-300">probabilityIA</span>
