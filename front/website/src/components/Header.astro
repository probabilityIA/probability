<header class="bg-[#0A0A0F] sticky top-0 z-50 border-b border-[#27272A]">
	<nav class="mx-auto px-20 py-5 flex items-center justify-between h-20">
		<!-- Logo -->
		<a href="/" class="flex items-center gap-3 cursor-pointer group">
			<!-- Dot + Diagonal Line Logo -->
			<svg
				class="w-10 h-10 flex-shrink-0 group-hover:scale-110 transition-transform duration-300"
				viewBox="0 0 40 40"
				fill="none"
			>
				<!-- Black Dot -->
				<circle cx="8" cy="8" r="3" fill="#000000"></circle>
				<!-- Purple Diagonal Line -->
				<line
					x1="12"
					y1="12"
					x2="32"
					y2="32"
					stroke="#8B5CF6"
					stroke-width="4"
					stroke-linecap="round"></line>
			</svg>
			<span
				class="text-white font-bold text-xl group-hover:text-[#8B5CF6] transition-colors duration-300"
				>probabilityIA</span
			>
		</a>

		<!-- Navigation Links -->
		<div class="hidden md:flex items-center gap-8">
			<a
				href="/producto"
				class="text-[#A1A1AA] hover:text-white transition-colors text-sm"
				>Producto</a
			>
			<a
				href="/como-funciona"
				class="text-[#A1A1AA] hover:text-white transition-colors text-sm"
				>Cómo funciona</a
			>
			<a
				href="/precios"
				class="text-[#A1A1AA] hover:text-white transition-colors text-sm"
				>Precios</a
			>
			<a
				href="/integraciones"
				class="text-[#A1A1AA] hover:text-white transition-colors text-sm"
				>Integraciones</a
			>
		</div>

		<!-- CTA Buttons -->
		<div class="flex items-center gap-3">
			<a
				href="/contacto"
				class="border border-[#3F3F46] text-white px-5 py-2 rounded-lg font-medium transition-colors hover:bg-[#18181B] text-sm"
			>
				Contáctanos
			</a>
			<a
				href="/demo"
				class="bg-[#8B5CF6] hover:bg-[#7C3AED] text-white px-5 py-2 rounded-lg font-medium transition-colors text-sm"
			>
				Solicitar Demo
			</a>
		</div>
	</nav>
</header>
