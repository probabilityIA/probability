<section class="bg-[#0F0F14] py-25 px-20">
	<div class="max-w-4xl mx-auto">
		<!-- Gradient CTA Card -->
		<div class="relative bg-gradient-to-br from-[#8B5CF6] via-[#6D28D9] to-[#4C1D95] rounded-2xl p-20 overflow-hidden border border-[#8B5CF650]">
			<!-- Background decoration -->
			<div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.3), transparent 40%)"></div>

			<div class="relative z-10 text-center">
				<!-- Main Title -->
				<h2 class="text-5xl font-bold text-white mb-6">
					¿Listo para eliminar las devoluciones de tu tienda?
				</h2>

				<!-- Subtitle -->
				<p class="text-white text-opacity-90 text-lg mb-10 max-w-2xl mx-auto">
					Comienza gratis hoy. Sin tarjeta de crédito. Sin obligaciones.
				</p>

				<!-- CTA Buttons -->
				<div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-10">
					<button class="bg-white text-[#8B5CF6] hover:bg-gray-100 px-10 py-4 rounded-lg font-bold text-lg transition-colors w-full sm:w-auto">
						Activar Demo Gratis
					</button>
					<button class="border-2 border-white text-white hover:bg-white hover:text-[#8B5CF6] px-10 py-4 rounded-lg font-bold text-lg transition-colors w-full sm:w-auto">
						Hablar con Ventas
					</button>
				</div>

				<!-- Trust Bullets -->
				<div class="flex flex-col sm:flex-row items-center justify-center gap-6 text-white text-sm">
					<div class="flex items-center gap-2">
						<svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
							<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
						</svg>
						<span>Configuración en 5 minutos</span>
					</div>
					<div class="flex items-center gap-2">
						<svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
							<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
						</svg>
						<span>Soporte 24/7</span>
					</div>
					<div class="flex items-center gap-2">
						<svg class="w-5 h-5 text-white" viewBox="0 0 24 24" fill="currentColor">
							<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"></path>
						</svg>
						<span>Cancelación gratuita</span>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
