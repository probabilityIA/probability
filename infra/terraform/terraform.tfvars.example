# Archivo de ejemplo de variables de Terraform
# Copia este archivo a terraform.tfvars y ajusta los valores

aws_region = "us-east-1"

# Nombre de la instancia EC2 existente (por tag Name)
ec2_instance_name = "cam"

# Ambiente de despliegue
environment = "production"

# Número de imágenes a mantener en ECR (1 = solo la última)
ecr_image_retention_count = 1

# Tags comunes para todos los recursos
tags = {
  Project     = "rupu"
  ManagedBy   = "terraform"
  Environment = "production"
  Team        = "devops"
}
