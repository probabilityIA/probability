{
  "id": null,
  "uid": "probability-containers",
  "title": "Contenedores - Uso de Recursos",
  "description": "Monitoreo de CPU, memoria, red y disco del servidor y sus contenedores en producción",
  "tags": ["probability", "contenedores", "infraestructura"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 10,
      "title": "Resumen del Servidor",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 11,
      "title": "CPU del Servidor",
      "description": "Porcentaje total de CPU consumido en el servidor (todos los procesos)",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=\"/\",cpu=\"total\"}[2m]) * 100 / scalar(machine_cpu_cores)",
          "legendFormat": "CPU %",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 12,
      "title": "RAM Usada",
      "description": "Memoria RAM total consumida en el servidor (incluye OS y todos los procesos)",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{id=\"/\"} / scalar(machine_memory_bytes) * 100",
          "legendFormat": "RAM %",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 13,
      "title": "RAM Usada / Total",
      "description": "RAM consumida vs disponible en el servidor",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{id=\"/\"} / 1024 / 1024",
          "legendFormat": "Usada (MB)",
          "refId": "A",
          "instant": true
        },
        {
          "expr": "scalar(machine_memory_bytes) / 1024 / 1024",
          "legendFormat": "Total (MB)",
          "refId": "B",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 14,
      "title": "Disco del Servidor",
      "description": "Porcentaje del disco principal (/dev/root) utilizado",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "container_fs_usage_bytes{id=\"/\",device=\"/dev/root\"} / container_fs_limit_bytes{id=\"/\",device=\"/dev/root\"} * 100",
          "legendFormat": "Disco %",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 16,
      "title": "Total CPU en contenedores",
      "description": "Uso de CPU: contenedores activos, sistema OS y CPU disponible",
      "type": "stat",
      "gridPos": { "h": 10, "w": 5, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{image!=\"\",image!~\".*cadvisor.*\",cpu=\"total\"}[2m])) * 100 / scalar(machine_cpu_cores)",
          "legendFormat": "Contenedores",
          "refId": "A",
          "instant": true
        },
        {
          "expr": "(rate(container_cpu_usage_seconds_total{id=\"/\",cpu=\"total\"}[2m]) * 100 / scalar(machine_cpu_cores)) - scalar(sum(rate(container_cpu_usage_seconds_total{image!=\"\",image!~\".*cadvisor.*\",cpu=\"total\"}[2m])) * 100 / scalar(machine_cpu_cores))",
          "legendFormat": "Sistema OS",
          "refId": "B",
          "instant": true
        },
        {
          "expr": "100 - rate(container_cpu_usage_seconds_total{id=\"/\",cpu=\"total\"}[2m]) * 100 / scalar(machine_cpu_cores)",
          "legendFormat": "Disponible",
          "refId": "C",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Disponible" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "semi-dark-green" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Sistema OS" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "gray" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Contenedores" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "blue" } }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "vertical",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 1,
      "title": "Distribución de CPU del servidor",
      "description": "Vista completa del uso de CPU: cada contenedor, sistema OS y CPU disponible",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 19, "x": 5, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "label_replace(rate(container_cpu_usage_seconds_total{image!=\"\",image!~\".*cadvisor.*\",cpu=\"total\"}[2m]) * 100 / scalar(machine_cpu_cores), \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}}",
          "refId": "A",
          "instant": true
        },
        {
          "expr": "(rate(container_cpu_usage_seconds_total{id=\"/\",cpu=\"total\"}[2m]) * 100 / scalar(machine_cpu_cores)) - scalar(sum(rate(container_cpu_usage_seconds_total{image!=\"\",image!~\".*cadvisor.*\",cpu=\"total\"}[2m])) * 100 / scalar(machine_cpu_cores))",
          "legendFormat": "Sistema OS",
          "refId": "B",
          "instant": true
        },
        {
          "expr": "100 - rate(container_cpu_usage_seconds_total{id=\"/\",cpu=\"total\"}[2m]) * 100 / scalar(machine_cpu_cores)",
          "legendFormat": "Disponible",
          "refId": "C",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": { "mode": "palette-classic" },
          "custom": {}
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Disponible" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "semi-dark-green" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Sistema OS" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "gray" } }
            ]
          }
        ]
      },
      "options": {
        "pieType": "donut",
        "displayLabels": ["name", "percent"],
        "tooltip": { "mode": "single" },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        }
      }
    },
    {
      "id": 15,
      "title": "Total RAM en contenedores",
      "description": "Suma de la RAM consumida por todos los contenedores activos",
      "type": "stat",
      "gridPos": { "h": 10, "w": 5, "x": 0, "y": 16 },
