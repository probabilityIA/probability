{
  "id": null,
  "uid": "probability-containers",
  "title": "Contenedores - Uso de Recursos",
  "description": "Monitoreo de CPU, memoria, red y disco del servidor y sus contenedores en producción",
  "tags": ["probability", "contenedores", "infraestructura"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "id": 10,
      "title": "Resumen del Servidor",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 11,
      "title": "CPU del Servidor",
      "description": "Porcentaje total de CPU consumido en el servidor (todos los procesos)",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{id=\"/\",cpu=\"total\"}[2m]) * 100 / scalar(machine_cpu_cores)",
          "legendFormat": "CPU %",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 60 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 12,
      "title": "RAM Usada",
      "description": "Memoria RAM total consumida en el servidor (incluye OS y todos los procesos)",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{id=\"/\"} / scalar(machine_memory_bytes) * 100",
          "legendFormat": "RAM %",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 13,
      "title": "RAM Usada / Total",
      "description": "RAM consumida vs disponible en el servidor",
      "type": "stat",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "container_memory_usage_bytes{id=\"/\"} / 1024 / 1024",
          "legendFormat": "Usada (MB)",
          "refId": "A",
          "instant": true
        },
        {
          "expr": "scalar(machine_memory_bytes) / 1024 / 1024",
          "legendFormat": "Total (MB)",
          "refId": "B",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 14,
      "title": "Disco del Servidor",
      "description": "Porcentaje del disco principal (/dev/root) utilizado",
      "type": "gauge",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "container_fs_usage_bytes{id=\"/\",device=\"/dev/root\"} / container_fs_limit_bytes{id=\"/\",device=\"/dev/root\"} * 100",
          "legendFormat": "Disco %",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 1,
      "title": "CPU por contenedor",
      "description": "Porcentaje de CPU que usa cada contenedor en tiempo real",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "label_replace(rate(container_cpu_usage_seconds_total{image!=\"\",image!~\".*cadvisor.*\",cpu=\"total\"}[2m]) * 100, \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "table", "placement": "bottom" }
      }
    },
    {
      "id": 2,
      "title": "Memoria por contenedor",
      "description": "Megabytes de RAM consumidos por cada servicio",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "label_replace(container_memory_usage_bytes{image!=\"\",image!~\".*cadvisor.*\"} / 1024 / 1024, \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "mbytes",
          "min": 0,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "table", "placement": "bottom" }
      }
    },
    {
      "id": 3,
      "title": "Red - Tráfico de entrada",
      "description": "Tráfico de red que entra a cada contenedor (bytes/seg)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "label_replace(rate(container_network_receive_bytes_total{image!=\"\",image!~\".*cadvisor.*\"}[2m]), \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}} - entrada",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 4,
      "title": "Red - Tráfico de salida",
      "description": "Tráfico de red que sale de cada contenedor (bytes/seg)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "label_replace(rate(container_network_transmit_bytes_total{image!=\"\",image!~\".*cadvisor.*\"}[2m]), \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}} - salida",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 5,
      "title": "Disco - Lectura",
      "description": "Velocidad de lectura del disco por contenedor",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 30 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "label_replace(rate(container_fs_reads_bytes_total{image!=\"\",image!~\".*cadvisor.*\"}[2m]), \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}} - lectura",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 6,
      "title": "Disco - Escritura",
      "description": "Velocidad de escritura al disco por contenedor",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 30 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "label_replace(rate(container_fs_writes_bytes_total{image!=\"\",image!~\".*cadvisor.*\"}[2m]), \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}} - escritura",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "min": 0,
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        },
        "overrides": []
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    }
  ]
}
