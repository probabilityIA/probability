          {
            "matcher": { "id": "byName", "options": "Sistema OS" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "gray" } }
            ]
          }
        ]
      },
      "options": {
        "pieType": "donut",
        "displayLabels": ["name", "percent"],
        "tooltip": { "mode": "single" },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        }
      }
