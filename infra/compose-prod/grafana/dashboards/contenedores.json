    {
      "id": 3,
      "title": "Red - Tráfico de entrada",
      "description": "Tráfico de red que entra a cada contenedor (bytes/seg)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 36 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
