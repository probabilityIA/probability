        },
        {
          "expr": "(container_memory_usage_bytes{id=\"/\"} - scalar(sum(container_memory_usage_bytes{image!=\"\",image!~\".*cadvisor.*\"}))) / 1024 / 1024 / 1024",
          "legendFormat": "Sistema OS",
          "refId": "B",
          "instant": true
        },
        {
          "expr": "(scalar(machine_memory_bytes) - container_memory_usage_bytes{id=\"/\"}) / 1024 / 1024 / 1024",
          "legendFormat": "Libre",
          "refId": "C",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "gbytes",
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Libre" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "semi-dark-green" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Sistema OS" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "gray" } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Contenedores" },
            "properties": [
              { "id": "color", "value": { "mode": "fixed", "fixedColor": "blue" } }
            ]
          }
        ]
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "orientation": "vertical",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 2,
      "title": "Distribución de RAM del servidor",
      "description": "Vista completa del uso de RAM: cada contenedor, procesos del sistema OS, y memoria libre",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 19, "x": 5, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "grafanacloud-prom" },
      "targets": [
        {
          "expr": "label_replace(container_memory_usage_bytes{image!=\"\",image!~\".*cadvisor.*\"} / scalar(machine_memory_bytes) * 100, \"service\", \"$1\", \"image\", \".*/([^/:]+):.*\")",
          "legendFormat": "{{service}}",
          "refId": "A",
